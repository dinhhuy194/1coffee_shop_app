<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Avatar -->
        <LinearLayout
            android:id="@+id/profileHeader"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/cf_background"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Back"
                android:src="@drawable/back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/sym_def_app_icon"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Guest User"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="guest@coffeeshop.com"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Login/Logout Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/authBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:background="@drawable/orange_bg"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- ===== MEMBERSHIP CARD ===== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/membershipCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_membership_card_normal"
                android:orientation="vertical"
                android:padding="18dp">

                <!-- Row 1: Bean count + Rank name + Emoji icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Left: points info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/membershipRankLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â˜• Normal"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:alpha="0.85" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">


                            <TextView
                                android:id="@+id/membershipBeanCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="BEAN"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:alpha="0.8" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Right: big emoji -->
                    <TextView
                        android:id="@+id/membershipRankEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜•"
                        android:textSize="48sp" />
                </LinearLayout>

                <!-- Row 2: Progress bar -->
                <LinearLayout
                    android:id="@+id/membershipProgressSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/membershipProgressLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CÃ²n 500 BEAN ná»¯a lÃªn Silver"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:alpha="0.9" />

                        <TextView
                            android:id="@+id/membershipProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/membershipProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/white"
                        android:progressBackgroundTint="#40FFFFFF" />
                </LinearLayout>

                <!-- Diamond special message -->
                <TextView
                    android:id="@+id/membershipDiamondMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="ðŸ‘‘ Báº¡n Ä‘Ã£ Ä‘áº¡t cáº¥p Ä‘á»™ tá»‘i cao!"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!-- Tap hint -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Xem Ä‘áº·c quyá»n â€º"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.7" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- ===== END MEMBERSHIP CARD ===== -->

        <!-- Menu Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">


            <!-- My Favorites -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/favoritesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_favorite"
                        android:contentDescription="Favorites"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="My Favorites"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- My Vouchers -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/myVouchersBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="ðŸŽ«"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Voucher cá»§a tÃ´i"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payment Methods -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/paymentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_payment"
                        android:contentDescription="Payment"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Payment Methods"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/settingsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Settings"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Settings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Language -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/languageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_language"
                        android:contentDescription="Language"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Language"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Us -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/aboutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_info"
                        android:contentDescription="About"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="About Us"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feedback -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/feedbackBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="3dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="18dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_feedback"
                        android:contentDescription="Feedback"
                        app:tint="@color/brownLight" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="Feedback"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkBrown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€º"
                        android:textSize="28sp"
                        android:alpha="0.5"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
